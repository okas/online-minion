@inherits LayoutComponentBase

@code {
  private bool _isSideBarExpanded = true;

  private void ToggleSideBar() => _isSideBarExpanded = !_isSideBarExpanded;

  private static class Str
  {
    public const string HeaderLabel = "OnlineMinion.SPA.Blazor";
    public const string FooterLabel = "Lorem ipsum footer";
  }

}

<RadzenLayout>
  <RadzenHeader>
    <RadzenRow AlignItems="@AlignItems.Center" JustifyContent="@JustifyContent.SpaceBetween">
      <RadzenStack
          AlignItems="@AlignItems.Center"
          JustifyContent="@JustifyContent.SpaceBetween"
          Orientation="@Orientation.Horizontal">
        <RadzenSidebarToggle Click="@ToggleSideBar"/>
        <RadzenText class="rz-m-0" Text="@Str.HeaderLabel" TextStyle="@TextStyle.H6"/>
      </RadzenStack>
      <div class="rz-p-4">
        <RadzenLink Path="https://learn.microsoft.com/aspnet/core" Target="_blank" Text="About"/>
      </div>
    </RadzenRow>
  </RadzenHeader>
  <RadzenSidebar @bind-Expanded="@_isSideBarExpanded">
    <div class="rz-p-4">
      <NavMenu/>
    </div>
  </RadzenSidebar>
  <RadzenBody>
    @Body
  </RadzenBody>
  <RadzenFooter>
    <RadzenStack AlignItems="@AlignItems.Center" JustifyContent="@JustifyContent.Center">
      <RadzenText class="rz-m-0" Text="@Str.FooterLabel"/>
    </RadzenStack>
  </RadzenFooter>
</RadzenLayout>

<RadzenDialog/>
<RadzenTooltip/>
