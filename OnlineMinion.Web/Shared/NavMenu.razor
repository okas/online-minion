@code
{
  private List<(string Path, string Text)> _menuItems = new()
  {
    ("/", "Home"),
    ("/account-specs","Account Specs"),
    ("/payment-specs","Payment Specs"),
  };

}

<RadzenPanelMenu Match="@NavLinkMatch.All" Multiple>
  <ChildContent>
    @foreach (var (path, text) in _menuItems)
    {
      <RadzenPanelMenuItem Path="@path" Text="@text"/>
    }
  </ChildContent>
</RadzenPanelMenu>
